<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp">

        <TextView
            android:id="@+id/wear_picture_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品细节展示"
            android:textColor="@color/colorBlack"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/wear_picture_line_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/wear_picture_tv"
            android:layout_marginTop="10dp"
            android:background="@mipmap/lineblack" />

        <VideoView
            android:id="@+id/wear_picture_video_view"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_below="@id/wear_picture_line_tv"
            android:layout_marginTop="10dp" />

        <ListView
            android:id="@+id/wear_picture_list_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/wear_picture_video_view"
            android:layout_marginTop="10dp"
            android:divider="@null"
            android:dividerHeight="5dp"
            android:scrollbars="none" />
    </RelativeLayout>

</LinearLayout>